<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

<div class="container mt-4">
  <h1><%= title %></h1>

  <div class="mb-3">
    <a href="/cars/add" class="btn btn-primary">Add Car</a>
  </div>

  <table class="table table-striped table-bordered">
    <thead class="table-light">
      <tr>
        <th>Make</th>
        <th>Model</th>
        <th>Year</th>
        <th>Price ($)</th>
        <th>Mileage (km)</th>
        <th>Condition</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% CarList.forEach(function(car){ %>
        <tr>
          <td><%= car.make %></td>
          <td><%= car.model %></td>
          <td><%= car.year %></td>
          <td><%= car.price %></td>
          <td><%= car.mileage %></td>
          <td><%= car.condition %></td>
          <td>
            <a href="/cars/edit/<%= car._id %>" class="btn btn-sm btn-warning">Edit</a>
            <a href="/cars/delete/<%= car._id %>" class="btn btn-sm btn-danger">Delete</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<%- include ../partials/footer.ejs %>
