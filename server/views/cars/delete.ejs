<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

<div class="container mt-4">
  <h1><%= title %></h1>

  <div class="alert alert-danger">
    <p>Are you sure you want to delete this car from your inventory?</p>
    <ul>
      <li><strong><%= car.year %> <%= car.make %> <%= car.model %></strong></li>
      <li>Price: $<%= car.price %></li>
      <li>Mileage: <%= car.mileage %> km</li>
      <li>Condition: <%= car.condition %></li>
    </ul>
  </div>

  <form method="post" action="/cars/delete/<%= car._id %>">
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a href="/cars" class="btn btn-secondary">Cancel</a>
  </form>
</div>

<%- include ../partials/footer.ejs %>
